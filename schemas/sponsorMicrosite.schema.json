{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://xopsconference.com/schemas/sponsorMicrosite.schema.json",
  "title": "Sponsor Microsite",
  "description": "Schema for sponsor microsite data model v1.0 - extends sponsor schema with additional microsite-specific fields",
  "allOf": [
    {
      "$ref": "sponsor.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "microsite": {
          "type": "object",
          "description": "Microsite-specific configuration",
          "required": ["enabled"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Whether the microsite is enabled"
            },
            "customDomain": {
              "type": "string",
              "description": "Custom domain for the microsite",
              "format": "hostname"
            },
            "theme": {
              "type": "object",
              "description": "Microsite theme customization",
              "properties": {
                "primaryColor": {
                  "type": "string",
                  "description": "Primary brand color",
                  "pattern": "^#[0-9A-Fa-f]{6}$"
                },
                "secondaryColor": {
                  "type": "string",
                  "description": "Secondary brand color",
                  "pattern": "^#[0-9A-Fa-f]{6}$"
                },
                "logoUrl": {
                  "type": "string",
                  "description": "Custom logo for microsite",
                  "format": "uri"
                }
              }
            },
            "content": {
              "type": "object",
              "description": "Microsite content sections",
              "properties": {
                "hero": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string",
                      "minLength": 1
                    },
                    "subtitle": {
                      "type": "string"
                    },
                    "backgroundImage": {
                      "type": "string",
                      "format": "uri"
                    }
                  }
                },
                "about": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string",
                      "minLength": 1
                    },
                    "content": {
                      "type": "string",
                      "minLength": 1
                    }
                  }
                },
                "products": {
                  "type": "array",
                  "description": "List of products/services to showcase",
                  "items": {
                    "type": "object",
                    "required": ["name", "description"],
                    "properties": {
                      "name": {
                        "type": "string",
                        "minLength": 1
                      },
                      "description": {
                        "type": "string",
                        "minLength": 1
                      },
                      "imageUrl": {
                        "type": "string",
                        "format": "uri"
                      },
                      "learnMoreUrl": {
                        "type": "string",
                        "format": "uri"
                      }
                    }
                  }
                },
                "team": {
                  "type": "array",
                  "description": "Team members to showcase",
                  "items": {
                    "type": "object",
                    "required": ["name", "role"],
                    "properties": {
                      "name": {
                        "type": "string",
                        "minLength": 1
                      },
                      "role": {
                        "type": "string",
                        "minLength": 1
                      },
                      "bio": {
                        "type": "string"
                      },
                      "photoUrl": {
                        "type": "string",
                        "format": "uri"
                      },
                      "linkedinUrl": {
                        "type": "string",
                        "format": "uri"
                      }
                    }
                  }
                },
                "resources": {
                  "type": "array",
                  "description": "Downloadable resources",
                  "items": {
                    "type": "object",
                    "required": ["title", "type", "url"],
                    "properties": {
                      "title": {
                        "type": "string",
                        "minLength": 1
                      },
                      "description": {
                        "type": "string"
                      },
                      "type": {
                        "type": "string",
                        "enum": ["pdf", "video", "whitepaper", "case-study", "ebook"]
                      },
                      "url": {
                        "type": "string",
                        "format": "uri"
                      },
                      "thumbnailUrl": {
                        "type": "string",
                        "format": "uri"
                      }
                    }
                  }
                }
              }
            },
            "seo": {
              "type": "object",
              "description": "SEO metadata for the microsite",
              "properties": {
                "title": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 60
                },
                "description": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 160
                },
                "keywords": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "ogImage": {
                  "type": "string",
                  "format": "uri"
                }
              }
            }
          }
        }
      }
    }
  ]
}
